@model IEnumerable<MvcCoreProductOperationApplication.Models.Product>

@{
    ViewData["Title"] = "ProductList";
}

<h1>Product List</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by title , description or category name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
        </p>
        <p>
            Find by Stock Quentity between min and max :
            Min <input type="number" name="SearchMinValue" value="@ViewData["CurrentMinValue"]" />
            
            Max <input type="number" name="SearchMaxValue" value="@ViewData["CurrentMaxValue"]" />
            <input type="submit" value="Search" class="btn btn-outline-dark" />
        </p>
    </div>
</form>




<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockQuantity)
            </th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockQuantity)
                </td>
                <td>
                    <a class="badge badge-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="badge badge-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
